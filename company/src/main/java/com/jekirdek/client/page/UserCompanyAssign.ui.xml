<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:j="urn:import:com.jekirdek.client.component" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel styleName="pageOneColumn">
		<b:Form type="HORIZONTAL">

			<b:FormGroup>
				<b:FormLabel text="Kullanıcı Kimlik Bilgisi" for="userTcknTxt" addStyleNames="col-md-4" />
				<g:FlowPanel addStyleNames="col-md-6">
					<b:TextBox ui:field="userTcknTxt" b:id="userTcknTxt" />
				</g:FlowPanel>
				<g:FlowPanel addStyleNames="col-md-2">
					<b:Button ui:field="searchBtn" text="Getir" icon="SEARCH" type="DANGER" />
				</g:FlowPanel>
			</b:FormGroup>

		</b:Form>

		<j:Table>
			<j:Row>
				<j:Cell>
					<j:ComboBox ui:field="sourceCmb" isMultipleSelect="true" visibleItemCount="15" />
				</j:Cell>
				<j:Cell>
					<j:Div>
						<j:ImageButton src="images/right_icon.png" ui:field="rightBtn" height="35px" styleName="m10" />
					</j:Div>
					<j:Div>
						<j:ImageButton src="images/left_icon.png" ui:field="leftBtn" height="35px" styleName="m10" />
					</j:Div>
				</j:Cell>
				<j:Cell>
					<j:ComboBox ui:field="targetCmb" isMultipleSelect="true" visibleItemCount="15" />
				</j:Cell>
			</j:Row>
			<j:Row>
				<j:Cell colSpan="3">
					<b:Button ui:field="saveBtn" text="Kaydet" type="PRIMARY" icon="SAVE" />
				</j:Cell>
			</j:Row>
		</j:Table>

	</g:HTMLPanel>
</ui:UiBinder> 