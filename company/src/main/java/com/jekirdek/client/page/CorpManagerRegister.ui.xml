<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:j="urn:import:com.jekirdek.client.component" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<b:Form type="HORIZONTAL">

			<b:FormGroup>
				<b:FormLabel text="Ünvanı" for="titleType" addStyleNames="col-md-3" />
				<g:FlowPanel addStyleNames="col-md-9">
					<j:Combo ui:field="titleType" b:id="titleType" />
				</g:FlowPanel>
			</b:FormGroup>

			<b:FormGroup>
				<b:FormLabel text="Ticaret Ünvanı" for="tradeName" addStyleNames="col-md-3" />
				<g:FlowPanel addStyleNames="col-md-9">
					<b:TextBox ui:field="tradeName" b:id="tradeName" />
				</g:FlowPanel>
			</b:FormGroup>

			<b:FormGroup>
				<b:FormLabel text="Mersis Numarası" for="mersisNo" addStyleNames="col-md-3" />
				<g:FlowPanel addStyleNames="col-md-9">
					<b:TextBox ui:field="mersisNo" b:id="mersisNo" />
				</g:FlowPanel>
			</b:FormGroup>

			<b:FormGroup>
				<b:FormLabel text="Şirket Merkezi" for="companyCenter" addStyleNames="col-md-3" />
				<g:FlowPanel addStyleNames="col-md-9">
					<b:TextBox ui:field="companyCenter" b:id="companyCenter" />
				</g:FlowPanel>
			</b:FormGroup>

			<b:FormGroup>
				<b:FormLabel text="Temsilci Ad" for="name" addStyleNames="col-md-3" />
				<g:FlowPanel addStyleNames="col-md-9">
					<b:TextBox ui:field="name" b:id="name" />
				</g:FlowPanel>
			</b:FormGroup>

			<b:FormGroup>
				<b:FormLabel text="Temsilci Soyad" for="surname" addStyleNames="col-md-3" />
				<g:FlowPanel addStyleNames="col-md-9">
					<b:TextBox ui:field="surname" b:id="surname" />
				</g:FlowPanel>
			</b:FormGroup>

			<b:FormGroup>
				<g:FlowPanel addStyleNames="col-md-offset-3 col-md-2">
					<b:Button ui:field="addManagerBtn" text="Ekle" type="PRIMARY" icon="SAVE" />
				</g:FlowPanel>
			</b:FormGroup>
		</b:Form>

	</g:HTMLPanel>
</ui:UiBinder> 