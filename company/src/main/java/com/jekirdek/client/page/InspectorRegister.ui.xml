<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:j="urn:import:com.jekirdek.client.component" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>
		<b:Form type="HORIZONTAL">

			<b:FormGroup>
				<b:FormLabel text="Ad" for="name" addStyleNames="col-md-3" />
				<g:FlowPanel addStyleNames="col-md-9">
					<b:TextBox ui:field="name" b:id="name" />
				</g:FlowPanel>
			</b:FormGroup>
	
	<b:FormGroup>
				<b:FormLabel text="Soyad" for="name" addStyleNames="col-md-3" />
				<g:FlowPanel addStyleNames="col-md-9">
					<b:TextBox ui:field="surname" b:id="surname" />
				</g:FlowPanel>
			</b:FormGroup>
			
			<b:FormGroup>
				<b:FormLabel text="Ünvanı" for="title" addStyleNames="col-md-3" />
				<g:FlowPanel addStyleNames="col-md-9">
					<b:TextBox ui:field="title" b:id="title" />
				</g:FlowPanel>
			</b:FormGroup>

			<b:FormGroup>
				<b:FormLabel text="Tescil Edilen Şube" for="registeredBranch" addStyleNames="col-md-3" />
				<g:FlowPanel addStyleNames="col-md-9">
					<b:TextBox ui:field="registeredBranch" b:id="registeredBranch" />
				</g:FlowPanel>
			</b:FormGroup>
			
			<b:FormGroup>
				<b:FormLabel text="Adres" for="registeredBranch" addStyleNames="col-md-3" />
				<g:FlowPanel addStyleNames="col-md-9">
					<b:TextArea ui:field="address" b:id="address" />
				</g:FlowPanel>
			</b:FormGroup>
			
			<g:FlowPanel addStyleNames="col-md-offset-3 col-md-2">
				<b:Button ui:field="addInspectorBtn" text="Kaydet" type="PRIMARY" icon="SAVE" />
			</g:FlowPanel>
			
		</b:Form>
	</g:HTMLPanel>
</ui:UiBinder> 